<Page x:Class="Pavilions.MenuC"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pavilions"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuC">

    <Grid>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <TextBlock Text="Выберите пункт" TextAlignment="Center" FontSize="30" Margin="20"/>
            <Button Content="Таблица ТЦ" FontSize="30" Width="350" Margin="20" Foreground="White" Background="#78909C" Click="OpenSC"/>
            <Button Content="Аренда павильонов" FontSize="30" Width="350" Margin="20" Foreground="White" Background="#78909C" Click="OpenReserve"/>
        </StackPanel>
    </Grid>
</Page>
